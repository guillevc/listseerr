# ==============================================================================
# SERVER ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env in the same directory for local development.
# Paths are relative to the server package directory.
# ==============================================================================

# Server Configuration
PORT=3000
LOG_LEVEL=info
NODE_ENV=development

# Database Configuration (relative to server package: packages/server/)
# ../../data/listseerr.db → goes to project root, then data/listseerr.db
DATABASE_PATH=../../data/listseerr.db

# ./migrations → migrations folder in this package
MIGRATIONS_FOLDER=./migrations

# Security
# REQUIRED: 64-character hexadecimal encryption key
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_64_char_hex_key_here_replace_this_in_production_env
