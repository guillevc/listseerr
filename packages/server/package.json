{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "server",
  "private": true,
  "type": "module",
  "exports": {
    "./trpc": "./src/presentation/trpc/app.router.ts"
  },
  "scripts": {
    "dev": "bun run --env-file=.env src/index.ts",
    "dev:watch": "bun run --watch --env-file=.env src/index.ts",
    "build": "bun build src/index.ts --outdir ../../dist --target bun --production --minify --splitting",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "db:generate": "bun --env-file=.env drizzle-kit generate",
    "db:migrate": "bun run --env-file=.env scripts/migrate.ts",
    "db:reset": "bun run --env-file=.env scripts/reset.ts"
  },
  "dependencies": {
    "shared": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "@trpc/server": "catalog:",
    "croner": "catalog:",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "pino": "^10.1.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "drizzle-kit": "^0.31.8",
    "eslint": "catalog:",
    "pino-pretty": "^13.1.3",
    "typescript": "catalog:"
  }
}
