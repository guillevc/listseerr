{
  "name": "server",
  "private": true,
  "type": "module",
  "exports": [],
  "scripts": {
    "dev": "bun run --watch --env-file=../../.env src/index.ts",
    "build": "bun build src/index.ts --outdir ../../dist --target bun --production --sourcemap=external",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "db:generate": "bun --env-file=../../.env drizzle-kit generate",
    "db:migrate": "bun run --env-file=../../.env src/db/migrate.ts",
    "db:reset": "bun run --env-file=../../.env src/db/reset.ts"
  },
  "dependencies": {
    "shared": "workspace:*",
    "@t3-oss/env-core": "^0.13.8",
    "@trpc/server": "catalog:",
    "croner": "^9.1.0",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.7",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "drizzle-kit": "^0.31.8",
    "eslint": "catalog:",
    "typescript": "catalog:"
  }
}
