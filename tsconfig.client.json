{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "Preserve",

    /* Bundler mode */
    "jsx": "react-jsx",

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/client/*": ["./src/client/*"],
      "@/server/*": ["./src/server/*"],
      "@/shared/*": ["./src/shared/*"]
    },

    /* Build cache */
    "tsBuildInfoFile": ".cache/tsconfig.client.tsbuildinfo"
  },
  "include": ["src/client/**/*", "src/shared/**/*"]
}
