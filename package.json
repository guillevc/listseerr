{
  "name": "listseerr",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run dev:server & bun run dev:client",
    "dev:client": "vite",
    "dev:server": "bun run --watch src/server/index.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build",
    "build:server": "bun build src/server/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc --build --force",
    "typecheck:watch": "tsc --build --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/server/db/migrate.ts",
    "db:reset": "bun run src/server/db/reset.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.140.0",
    "@tanstack/react-table": "^8.21.3",
    "@trpc/client": "^11.7.2",
    "@trpc/react-query": "^11.7.2",
    "@trpc/server": "^11.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "croner": "^9.1.0",
    "drizzle-orm": "^0.45.0",
    "framer-motion": "^12.23.25",
    "hono": "^4.10.7",
    "lucide-react": "^0.556.0",
    "next-themes": "^0.4.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/router-devtools": "^1.140.0",
    "@tanstack/router-vite-plugin": "^1.140.0",
    "@types/bun": "^1.3.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.7"
  }
}
