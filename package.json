{
  "name": "listseerr",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Automatic Jellyseerr requests from your favorite lists",
  "author": "Guillermo Alfonso Varela Chouci√±o <guillevch@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/guillevc/listseerr",
  "repository": {
    "type": "git",
    "url": "https://github.com/guillevc/listseerr.git"
  },
  "workspaces": {
    "packages": ["packages/*"],
    "catalog": {
      "zod": "^4.1.13",
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "@trpc/react-query": "^11.7.2",
      "@tanstack/react-query": "^5.90.12",
      "typescript": "~5.9.3",
      "eslint": "^9.39.1",
      "@eslint/js": "^9.39.1",
      "globals": "^15.13.0",
      "typescript-eslint": "^8.19.1",
      "eslint-plugin-react-hooks": "^7.0.1",
      "eslint-plugin-react-refresh": "^0.4.24",
      "@types/node": "^22.10.2",
      "croner": "^9.1.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter server dev & bun run --filter client dev",
    "dev:client": "bun run --filter client dev",
    "dev:server": "bun run --filter server dev",
    "build": "bun run --filter client build && bun run --filter server build",
    "build:client": "bun run --filter client build",
    "build:server": "bun run --filter server build",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "ci": "bun run lint && bun run typecheck && bun run build",
    "start": "NODE_ENV=production bun run dist/index.js"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "eslint": "catalog:",
    "@eslint/js": "catalog:",
    "globals": "catalog:",
    "typescript-eslint": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:"
  }
}
