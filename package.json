{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "listseerr",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "Request movies & shows in Jellyseerr from your favorite lists",
  "author": "Guillermo Alfonso Varela Chouci√±o <guillevch@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/guillevc/listseerr",
  "repository": {
    "type": "git",
    "url": "https://github.com/guillevc/listseerr.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "@types/bun": "^1.3.4",
      "@trpc/server": "^11.7.2",
      "croner": "^9.1.0",
      "typescript": "~5.9.3",
      "zod": "^4.1.13"
    }
  },
  "scripts": {
    "dev": "bun run dev:server & bun run dev:client",
    "dev:client": "bun run --filter client dev",
    "dev:server": "bun run --watch --env-file .env.dev packages/server/src/index.ts",
    "build": "bun run build:client && bun run build:server && bun run build:scripts",
    "build:client": "bun run --filter client build",
    "build:client:analyze": "bun run --filter client build:analyze",
    "build:server": "bun build packages/server/src/index.ts --outdir dist --target bun --production --minify --splitting",
    "build:scripts": "bun build packages/server/scripts/reset-password.ts --outfile dist/reset-password.js --target bun",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "eslint .",
    "lint:client": "eslint packages/client",
    "lint:server": "eslint packages/server",
    "lint:shared": "eslint packages/shared",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "bun run lint && bun run format:check && bun run typecheck && bun test && bun run build",
    "start": "bun run --env-file .env dist/index.js",
    "db:generate": "bun run --env-file .env.dev -- bunx --bun --no-install drizzle-kit generate --config packages/server/drizzle.config.ts",
    "db:migrate": "bun run --env-file .env.dev packages/server/scripts/migrate.ts",
    "db:reset": "bun run --env-file .env.dev packages/server/scripts/reset.ts",
    "password:reset": "bun run --env-file .env.dev packages/server/scripts/reset-password.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "catalog:",
    "typescript-eslint": "^8.19.1"
  }
}
