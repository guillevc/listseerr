{
  "compilerOptions": {
    "target": "ES2022",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Path aliases - shared between client and server */
    "baseUrl": ".",
    "paths": {
      "@/server/*": ["./src/server/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/client/*": ["./src/client/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
  }
}
