{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "Preserve",

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/server/*": ["./src/server/*"],
      "@/shared/*": ["./src/shared/*"]
    },

    /* Bun types */
    "types": ["bun-types"],

    /* Build cache */
    "tsBuildInfoFile": ".cache/tsconfig.server.tsbuildinfo"
  },
  "include": ["src/server/**/*", "src/shared/**/*"]
}
